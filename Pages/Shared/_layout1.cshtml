<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FantasyPL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Layout1.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FantasyPL.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" id='navlink1' asp-area="" asp-page="/Index">FantasyPL</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (GlobalVar.LoggedInUser != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" id='navlink2' asp-area="" asp-page="/clubs">Clubs</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id='navlink2' asp-area="" asp-page="/player">Players</a>
                            </li>
                            @if (GlobalVar.LoggedInUser.UserType == 'F')
                            {
                                <li class="nav-item">
                                    <a class="nav-link" id='navlink2' asp-area="" asp-page="/FT">Fantasy Team</a>
                                </li>
                                
                            }
                            <li class="nav-item">
                                    <a class="nav-link" id='navlink2' asp-area="" asp-page="/Comp">Competitions</a>
                                </li>
                            <li class="nav-item">
                                <a class="nav-link" id='navlink2' asp-area="" asp-page="/fixture">Fixtures</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id='navlink2' asp-area="" asp-page="/Profile">Profile</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="loading">
        <div class="spinner"><img src="~/img/pngwing.png" width="100px" /></div>
    </div>

    <footer class='footer'>
        <div class="container">
            &copy; 2022 - FantasyPL
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(window).on("load", function(){
            $(".loading").fadeToggle("slow")
        });
        $("a").on("click", function(){
            $(".loading").fadeToggle("slow")
        })
        $("button").on("click", function () {
            $(".loading").fadeToggle("slow")
        })
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>