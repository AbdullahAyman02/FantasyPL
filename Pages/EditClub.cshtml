@page
@model FantasyPL.Pages.EditClubModel
@{
}
<br/>
<br />
<div class="center form">
<h3>Update a Club</h3>
<form method="post">
        @if (Model.Message.Length > 0)
        {
            <div class='alert alert-warning alert-dimsmissiable fade show flexcontainer' role='alert'>
                <string>@Model.Message</string>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }
	<div class="txt_field">
		<label for="club" id="clublabel">Club</label>      
		<select id="club" name="club" class="form-control" value='@GlobalVar.clubQueried.Name'>
			@foreach (var club in GlobalVar.listClubs)
			{
				if(club.Name == GlobalVar.clubQueried.Name){
						<option selected Value="@club.Name_Abbreviation">@club.Name</option>
				}
				else{
						<option Value="@club.Name_Abbreviation">@club.Name</option>
				}
			}
		</select>
	</div>
	<div class="txt_field">
	 <input type="text" name='name_abbreviation' id='name_abbreviation' value='@GlobalVar.clubQueried.Name_Abbreviation' required/>
	 <label>Club Name Abbreviation</label>
	</div>
	<div class="txt_field">
	 <input type="text" name='establishment_year' value='@GlobalVar.clubQueried.Establishment_year' required/>
	 <label>Establishment Year</label>
	</div>
    <div class="txt_field">
        <label for="city" id="citylabel">City</label>      
		<select id="city" name="city" class="form-control" value='@GlobalVar.clubQueried.City'>
				@foreach (var city in GlobalVar.Cities)
				{
						if (city == GlobalVar.clubQueried.City)
						{
								<option selected Value="@city">@city</option>
						}
						else
						{
								<option Value="@city">@city</option>
						}
				}
         </select>
	</div>
	<div class="txt_field">
		<input type="text" name='number_of_trophies' value='@GlobalVar.clubQueried.Number_of_Trophies' required/>
		<label>Number of Trophies</label>
	</div>
	<div class="name">
		<div class="txt_field">
			<input type="text" name='owner_fname' value='@GlobalVar.clubQueried.Owner_Fname' required/>
			<label>Owner's First Name'</label>
		</div>
		<div class="txt_field">
			<input type="text" name='owner_lname' value='@GlobalVar.clubQueried.Owner_Lname' required/>
			<label>Owner's Last Name'</label>
		</div>
	</div>
	<input type="submit" name="Update" value="Update"/>
	<input type="submit" name="Refresh" id="Refresh" value="Refresh" style="Display:none"/>
</form>
</div>
@section scripts{ 
<script>
	$(function () {
		$("#club").on("change", function() {
			$("#Refresh").click()
		});
	});
</script>
}