@page
@model FantasyPL.Pages.CreateCompModel
@{
}
<div class="center form">
<h3>Create a Competition</h3>
<form method="post">
    @if (Model.Message.Length > 0)
    {
        <div class='alert alert-warning alert-dimsmissiable fade show flexcontainer' role='alert'>
            <string>@Model.Message</string>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }
        <div class="txt_field">
            <input type="text" name='name' required />
            <label>Competition Name</label>
        </div>
        <div class="txt_field">
            <input type="password" name='password'/>
            <label>Password (Optional)</label>
        </div>
        <div class="txt_field">
            <input type="number" name='capacity' min='1' value="1" required />
            <label>Capacity</label>
        </div>

    <input type="submit" value="Create" />
</form>
</div>